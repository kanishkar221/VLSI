    .port_info 0 /INPUT 1 "clk";
    .port_info 1 /INPUT 1 "reset";
    .port_info 2 /OUTPUT 4 "count";
v0x7fffc8742e20_0 .net "clk", 0 0, v0x7fffc87556b0_0;  1 drivers
v0x7fffc87554b0_0 .var "count", 3 0;
v0x7fffc8755590_0 .net "reset", 0 0, v0x7fffc8755850_0;  1 drivers
E_0x7fffc8709b00 .event posedge, v0x7fffc8742e20_0;
    .scope S_0x7fffc8742bd0;
T_0 ;
    %wait E_0x7fffc8709b00;
    %load/vec4 v0x7fffc8755590_0;
    %flag_set/vec4 8;
    %jmp/0xz  T_0.0, 8;
    %pushi/vec4 15, 0, 4;
    %assign/vec4 v0x7fffc87554b0_0, 0;
    %jmp T_0.1;
T_0.0 ;
    %load/vec4 v0x7fffc87554b0_0;
    %subi 1, 0, 4;
    %assign/vec4 v0x7fffc87554b0_0, 0;
T_0.1 ;
    %jmp T_0;
    .thread T_0;
    .scope S_0x7fffc8742a40;
T_1 ;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x7fffc87556b0_0, 0, 1;
T_1.0 ;
    %delay 5, 0;
    %load/vec4 v0x7fffc87556b0_0;
    %inv;
    %store/vec4 v0x7fffc87556b0_0, 0, 1;
    %jmp T_1.0;
    %end;
    .thread T_1;
    .scope S_0x7fffc8742a40;
T_2 ;
    %vpi_call 2 20 "$dumpfile", "sync_down_counter.vcd" {0 0 0};
    %vpi_call 2 21 "$dumpvars", 32'sb00000000000000000000000000000000, S_0x7fffc8742a40 {0 0 0};
    %vpi_call 2 23 "$monitor", "Time=%0t | reset=%b | count=%b", $time, v0x7fffc8755850_0, v0x7fffc8755780_0 {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x7fffc8755850_0, 0, 1;
    %delay 10, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x7fffc8755850_0, 0, 1;
    %delay 150, 0;
    %vpi_call 2 29 "$finish" {0 0 0};
    %end;
